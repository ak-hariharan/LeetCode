class Solution {
    public boolean arrayStringsAreEqual(String[] word1, String[] word2) {
        String first = " ";
        String second = " ";
        for(int i = 0; i < word1.length; i += 1)
            first = first + word1[i];
        for(int j = 0; j < word2.length; j += 1)
            second = second + word2[j];
        if(first.equals(second)){
            return true;
        }
        else{
            return false;
        }
    }
}
